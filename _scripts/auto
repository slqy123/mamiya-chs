#!/bin/fish
set area (cat './.area')
if [ "$area" = "" ]
  set area (slurp)
  echo "$area" > './.area'
  exit
end

# swaymsg '[ class = "Code" ]' focus
hyprctl dispatch focuswindow Code
sleep 1
set image (grim -g "$area" -)

while true
  ydotool type '5j$xxs '

  while true
    sleep 0.3
    set new_image (grim -g "$area" -)
      
    if [ "$image" = "$new_image" ]
      sleep 0.3
      ydotool key 15:1 15:0  # tab
      ydotool key 58:1 58:0  # esc(capslock)
      # press ctrl+s
      # ydotool key 29:1 31:1 31:0 29:0 
      ydotool type '$v'
      sleep 0.2
      if [ (wl-paste -p) != '"' ]
        if [ (wl-paste -p) = 'ï¿½' ]
          ydotool type 'vddk'
          break
        else
          ydotool type 'F:ls '
          continue
        end
      end
        ydotool type 'v'
      break
    end
  end
end
